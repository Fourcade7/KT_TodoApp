<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".uiutils.MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TodoApp"
        tools:targetApi="31">
        <activity
            android:name=".presentation.UpDateActivity"
            android:exported="false"
            android:label="@string/title_activity_up_date"
            android:theme="@style/Theme.TodoApp" />
        <activity
            android:name=".presentation.insert.InsertActivity"
            android:exported="false"
            android:label="@string/title_activity_insert"
            android:theme="@style/Theme.TodoApp"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".presentation.onboarding.OnBoardingActivity"
            android:exported="false"
            android:label="@string/title_activity_on_boarding"
            android:theme="@style/Theme.TodoApp" />
        <activity
            android:name=".presentation.splash.SplashActivity"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.TodoApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.home.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TodoApp" />
    </application>

</manifest>